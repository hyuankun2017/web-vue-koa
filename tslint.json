{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "include": [
      "src/**/*",
      "tests/**/*"
    ]
  },
  "rules": {
    "indent": [true, "tab", 4],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": false,
    "semicolon": false,
    "trailing-comma": [true, {
        "multiline": {
            "objects": "ignore",
            "arrays": "never",
            "functions": "never",
            "typeLiterals": "ignore"
        },
        "esSpecCompliant": true 
    }],
    "whitespace": false,
    "member-access": false,
    "no-trailing-whitespace": false,
    "no-empty": false,
    "no-console": false,
    "arrow-parens": false,
    "one-line": false,
    "prefer-const": false,
    "no-var-keyword": true
  }
}
